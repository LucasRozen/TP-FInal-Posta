@using Agenda3.Models
@model Evento
@{
    ViewBag.Title = "AgregarEvento";
}

@using (Html.BeginForm("InsertarEvento", "Backoffice", FormMethod.Post))
{

    <p>Nombre:</p> @Html.TextBoxFor(model => model.Nombre) <br />
    <p>Evento:</p> @Html.TextBoxFor(model => model.IdTEve) <br />
    <p>Amigo:</p> @Html.TextBoxFor(model => model.Amigo) <br />



    <p>Activo:</p> @Html.CheckBoxFor(model => model.Activo) <br />
    <input type="submit" value="Enviar" />
}

