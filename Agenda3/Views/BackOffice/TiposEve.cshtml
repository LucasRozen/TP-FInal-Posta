@using Agenda3.Models
@{
    ViewBag.Title = "TiposEve";
}

<h2>Tipos de Eventos:</h2>
<ul>
    @foreach (TiposEve UnTipoEve in ViewBag.ListarTipos)
    {
        if (UnTipoEve.Activo == true)
        {
        <li>@UnTipoEve.TipEve</li>
        <a href="@Url.Action("EditoTipos", "BackOffice", new { id = UnTipoEve.IdTipEve })">Editar</a>
        <a href="@Url.Action("EliminarTipo", "BackOffice", new { id = UnTipoEve.IdTipEve })">Eliminar</a>
        }
    }
</ul>
<a href="@Url.Action("AgregarTipo", "BackOffice")">Agregar Tipo</a>

